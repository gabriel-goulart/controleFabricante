<% contentFor('body') %>
<div class="jumbotron">

<h3>Atualizar Fabricante</h3>
	<% for (fabricante of fabricantes){ %> 
	<form class="form-horizontal" action="/atualizarfabricante" method="post">
		<div class="form-group">
			<label class="control-label col-sm-2" for="cnpj">ID: </label>
			<div class="col-sm-10">
				<input type="text" readonly class="form-control" name="id" value="<%=fabricante.idfabricante%>">
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="nome">Nome: </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="nome" value="<%=fabricante.nome%>">
			</div>		
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="cnpj">CNPJ: </label>
			<div class="col-sm-10">
				<input type="number" class="form-control" name="cnpj" value="<%=fabricante.cnpj%>">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
					<div class="panel-group">
					  <div class="panel panel-default">
					    <div class="panel-heading">
					      <h4 class="panel-title">
					        <a data-toggle="collapse" href="#collapse1" id="addproduto" onclick="pegarProdutos(<%=fabricante.idfabricante%>)">Produtos</a>
					      </h4>
					    </div>
					    <div id="collapse1" class="panel-collapse collapse">
					      <div class="panel-body" id="campoprodutos">Produtos</div>
					    </div>
					  </div>
					</div>
			</div>
		</div>
		<div class="form-group text-center">
				<div class="col-sm-offset-1 col-sm-10">
					<button type="submit" class="btn btn-success"> Salvar</button>
					<a href="/"><button type="button" class="btn btn-danger"> Cancelar</button></a>
				</div>
		</div>
		
	</form>
	<%}%>
</div>

<script type="text/javascript">
 	$(document).ready(function(){
 		
 	});

 	function pegarProdutos(idfabricante){
 		console.log(idfabricante);
 		$.ajax({
 				url: "/atualizarprodutos/"+idfabricante,
 				async: false,
 				success: function(data){
 					$('#campoprodutos').html(data);
 				}
 			});
 	}
 </script>	